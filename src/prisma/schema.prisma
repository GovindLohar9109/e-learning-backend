generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model courses {
  id            Int             @id @default(autoincrement())
  name          String?         @db.VarChar(150)
  description   String?
  duration      String?         @db.VarChar(50)
  image_url     String?         @db.VarChar(255)
  link          String?
  topics        String[]
  created_at    DateTime?       @default(now()) @db.Timestamptz(6)
  updated_at    DateTime?       @db.Timestamptz(6)
  deleted_at    DateTime?       @db.Timestamp(6)
  users_courses users_courses[]

  @@index([name], map: "course_name_index")
}

model feedbacks {
  id         Int       @id(map: "feedback_pkey1") @default(autoincrement())
  user_id    Int
  message    String?   @db.VarChar(255)
  created_at DateTime? @default(now()) @db.Timestamptz(6)
  updated_at DateTime? @db.Timestamptz(6)
  deleted_at DateTime? @db.Timestamp(6)
  users      users     @relation(fields: [user_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model roles {
  id         Int          @id(map: "role_pkey") @default(autoincrement())
  name       String?      @unique(map: "roles_name_ukey") @db.VarChar(255)
  created_at DateTime?    @default(now()) @db.Timestamptz(6)
  updated_at DateTime?    @db.Timestamptz(6)
  deleted_at DateTime?    @db.Timestamp(6)
  user_roles user_roles[]
}

model user_roles {
  id         Int       @id @default(autoincrement())
  user_id    Int?
  role_id    Int?
  created_at DateTime? @default(now()) @db.Timestamptz(6)
  updated_at DateTime? @db.Timestamptz(6)
  deleted_at DateTime? @db.Timestamp(6)
  roles      roles?    @relation(fields: [role_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  users      users?    @relation(fields: [user_id], references: [id], onDelete: NoAction, onUpdate: NoAction)

  @@unique([user_id, role_id], map: "user_roles_user_id_role_id_ukey")
}

model users {
  id            Int             @id @default(autoincrement())
  name          String          @db.VarChar(255)
  email         String?         @unique(map: "users_user_email_key") @db.VarChar(255)
  password      String?         @db.VarChar(255)
  created_at    DateTime?       @default(now()) @db.Timestamptz(6)
  updated_at    DateTime?       @db.Timestamptz(6)
  deleted_at    DateTime?       @db.Timestamp(6)
  feedbacks     feedbacks[]
  user_roles    user_roles[]
  users_courses users_courses[]
}

model users_courses {
  user_id    Int
  course_id  Int
  id         Int       @id @default(autoincrement())
  created_at DateTime? @default(now()) @db.Timestamptz(6)
  updated_at DateTime? @db.Timestamptz(6)
  deleted_at DateTime? @db.Timestamp(6)
  courses    courses   @relation(fields: [course_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  users      users     @relation(fields: [user_id], references: [id], onDelete: NoAction, onUpdate: NoAction)

  @@unique([user_id, course_id], map: "users_courses_user_id_course_id_cidx")
}
