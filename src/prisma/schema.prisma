generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model courses {
  id            Int             @id @default(autoincrement())
  name          String          @db.VarChar(150)
  description   String
  duration      String         @db.VarChar(50)
  image_url     String         @db.VarChar(255)
  link          String
  topics        String[]
  created_at    DateTime       @default(now()) @db.Timestamptz(6)
  updated_at    DateTime       @default(now()) @db.Timestamptz(6)
  deleted_at    DateTime?       @db.Timestamptz(6)
  users_courses users_courses[]

  @@index([name,deleted_at], map: "course_name_index")
  @@map("courses")
}

model feedbacks {
  id         Int       @id(map: "feedback_pkey1") @default(autoincrement())
  user_id    Int
  message    String   @db.VarChar(255)
  created_at DateTime  @default(now()) @db.Timestamptz(6)
  updated_at DateTime  @default(now()) @db.Timestamptz(6)
  deleted_at DateTime? @db.Timestamptz(6)
  users      users     @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
  @@map("feedbacks")
}

model roles {
  id         Int         @id @default(autoincrement())
  name       String      @unique(map: "roles_name_ukey") @db.VarChar(255)
  created_at DateTime    @default(now()) @db.Timestamptz(6)
  updated_at DateTime    @default(now()) @db.Timestamptz(6)
  deleted_at DateTime?    @db.Timestamptz(6)
  user_roles user_roles[]
   @@map("roles")
}

model user_roles {
  id         Int       @id @default(autoincrement())
  user_id    Int
  role_id    Int
  created_at DateTime @default(now()) @db.Timestamptz(6)
  updated_at DateTime @default(now()) @db.Timestamptz(6)
  deleted_at DateTime? @db.Timestamptz(6)
  roles      roles    @relation(fields: [role_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
  users      users    @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@unique([user_id, role_id, deleted_at], map: "user_roles_user_id_role_id_ukey")
  @@map("user_roles")
}

model users {
  id            Int             @id @default(autoincrement())
  name          String          @db.VarChar(255)
  email         String         @unique(map: "users_user_email_key") @db.VarChar(255)
  password      String         @db.VarChar(255)
  created_at    DateTime       @default(now()) @db.Timestamptz(6)
  updated_at    DateTime       @default(now()) @db.Timestamptz(6)
  deleted_at    DateTime?       @db.Timestamptz(6)
  feedbacks     feedbacks[]
  user_roles    user_roles[]
  users_courses users_courses[]
  @@map("users")
}

model users_courses {
  id         Int       @id @default(autoincrement())
  user_id    Int
  course_id  Int
  created_at DateTime  @default(now()) @db.Timestamptz(6)
  updated_at DateTime  @default(now()) @db.Timestamptz(6)
  deleted_at DateTime? @db.Timestamptz(6)
  courses    courses   @relation(fields: [course_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
  users      users     @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@unique([user_id, course_id,deleted_at], map: "users_courses_user_id_course_id_cidx")
   @@map("users_courses")
}
